            <div class="mt-1">
                <div class="form-group">
                    <label for="ticker-symbol">Ticker Symbol</label>
                    <input type="text" class="form-control" id="tickerSymbol" placeholder="Enter Ticker Symbol">
                </div>
                 <div class="form-group">
                    <label for="tickerName">Ticker Name</label>
                    <input type="text" class="form-control" id="tickerName" placeholder="Select Ticker Name">
                </div>
                <div class="form-group">
                    <label for="quantity">Quantity</label>
                    <input type="number" class="form-control" id="quantity" placeholder="Enter purchase quanity">
                </div>
                <div class="form-group">
                    <label for="purchase-price">Purchase Price</label>
                    <input type="number" step="0.01" class="form-control" id="purchasePrice" placeholder="Enter Purchase price">
                </div>
                {{!-- get CMP - current-marketprice from third party API --}}
                <div class="form-group">
                    <label for="current-marketprice">Current Price</label>
                    <input type="number" step="0.01" class="form-control" id="cmarketPrice" placeholder="Current Market price">
                </div>
                {{!-- Ticker-based Valuation: Profit/ Loss --}}
                <div class="form-group">
                    <label for="gain-loss">Gain/ Loss</label>
                    <input type="number" step="0.01" class="form-control" id="gainLoss" placeholder="Gain/ Loss">
                </div>

                <button id="sign-up" type="submit" class="btn btn-primary signup-btn">Submit <i class="icon-arrow-right"></i></button>
            </div>