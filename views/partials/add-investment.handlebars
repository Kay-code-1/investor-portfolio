</div>

<!-- The Modal -->
<div id="myModal" class="modal">

  <!-- Modal content -->
  <div class="modal-content">
    <span class="close">&times;</span>
    <h4>Search ticker</h4>
    <div class="form-group">
    <label for="ticker-symbol">Ticker Symbol</label>
    <input
      type="text"
      class="form-control"
      id="ticker-symbol"
      placeholder="Enter Ticker Symbol"
    />
    <button
      id="btn-lookup"
      type="button"
      class="btn btn-secondary"
    >Lookup</button>
  </div>
  <hr>
  <table id="lookup-result" style="display: none;">
    <thead><tr>
      <th>Symbol</th>
      <th>Company Name</th>
    </tr>
    </thead>
    <tbody class="symbol-results">
    </tbody>
  </table>
</div>

